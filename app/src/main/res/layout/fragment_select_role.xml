<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".login.SelectRoleFragment">


    <Button
        android:id="@+id/button_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register as customer!" />

    <Button
        android:id="@+id/button_deliverer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Register as deliverer!" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25dp"
        android:text="Important for deliverers: You need to have 3 pictures to register: your ID card, your driving license and your motorbike license! "/>
</LinearLayout>